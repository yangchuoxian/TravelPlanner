<div class="container" ng-controller="LoginController" ng-cloak>
    <div class="col-sm-4 col-sm-offset-4 text-center login-site-logo">
        <img src="images/logo.png" alt="Site logo">
    </div>
    <div class="col-sm-4 col-sm-offset-4 error-message-box" ng-show="data.loginErrorMessage"
         ng-bind="data.loginErrorMessage"></div>
    <form method="post" class="col-sm-4 col-sm-offset-4 login-form" role="login-form"
          ng-submit="submitAdminLogin($event)">
        <div class="input-group login-input-group">
            <span class="input-group-addon"><i class="fa fa-user"></i></span>
            <input type="text" class="form-control" ng-model="data.username" name="username"
                   placeholder="<%= sails.__('enter username') %>" required auto-focus="true">
        </div>
        <div class="input-group login-input-group">
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
            <input type="password" class="form-control" ng-model="data.password" name="password"
                   placeholder="<%= sails.__('enter password') %>" required>
        </div>
        <div>
            <label><input type="checkbox" name="remember_me">&nbsp;&nbsp;<%= sails.__('remember me') %></label>
        </div>
        <div class="text-right">
            <button type="submit" class="btn btn-primary"><%= sails.__('submit') %></button>
        </div>
    </form>
    <div class="col-sm-4 col-sm-offset-4">
        <a href="/"><%= sails.__('back to homepage') %></a>
        <a href="忘记密码" class="pull-right"><%= sails.__('forgot password') %>?</a>
    </div>
</div>
